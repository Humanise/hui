<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:hui" title="HUI tests">
	<source url="navigation.xml" name="navSource"/>
	<listen for="selector">
		<selectionChanged>
			dock.setUrl(selector.getValue().value);
		</selectionChanged>
	</listen>
	<dock url="unittests/hui.html" name="dock" position="bottom" frame-name="Desktop">
		<sidebar>
			<overflow>
			<selection name="selector">
				<title>API</title>
				<item icon="common/info" text="XML-format" value="../api/xml/index.html"/>
				<item icon="common/info" text="JavaScript API" value="../api/index.html"/>
				<items source="navSource"/>
			</selection>
			</overflow>
		</sidebar>
		<tabs small="true">
			<tab title="Unit-tests">
				<toolbar>
					<icon icon="common/folder" text="Animation" click="dock.setUrl('unittests/animation.html')"/>
					<icon icon="common/folder" text="Formula" click="dock.setUrl('unittests/formula.html')"/>
					<icon icon="common/folder" text="HUI" click="dock.setUrl('unittests/hui.html')"/>
					<icon icon="common/folder" text="Style" click="dock.setUrl('unittests/style.html')"/>
					<icon icon="common/folder" text="Validation" click="dock.setUrl('unittests/validation.html')"/>
					<icon icon="common/folder" text="Window" click="dock.setUrl('unittests/window.html')"/>
				</toolbar>
			</tab>
		</tabs>
	</dock>
</gui>