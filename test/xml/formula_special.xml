<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:hui" padding="10" title="Formula (special)">
	<controller name="controller" source="formula_special.js"/>
	<source name="itemsSource" url="data/items_languages.xml"/>
	<box width="600" title="Drop down" variant="textured" padding="10">
		<toolbar>
			<icon icon="common/folder" title="Show values" name="showValues"/>
			<icon icon="common/folder" title="Build" name="build"/>
		</toolbar>
		<formula name="formula">
			<fields labels="above">
				<field label="Color">
					<color-input/>
				</field>
				<field label="Font">
					<font-input/>
				</field>
				<field label="Location">
					<location-input/>
				</field>
				<field label="Photo:">
					<image-input source="data/source_images.xml" key="photo"/>
				</field>
				<field label="Link:">
					<link-input>
						<type key="url" label="Adresse"/>
						<type key="email" label="E-mail"/>
						<type key="page" label="Side">
							<finder title="Vælg side" list-url="data/list_users.xml"/>
						</type>
						<type key="file" label="Fil">
							<finder title="Vælg fil" list-url="data/list_news.xml"/>
						</type>
					</link-input>
				</field>
				<field label="Code">
					<code-input name="code"/>
				</field>
			</fields>
		</formula>
	</box>
</gui>