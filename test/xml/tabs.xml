<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:In2iGui" padding="10" title="Tabs">
	<box width="400">
		<tabs>
			<tab title="Large tabs" padding="10">
				<formula>
					<group>
						<text label="Username:"/>
						<text label="Password:"/>
					</group>
				</formula>
			</tab>
			<tab title="Large tabs" padding="10">
			</tab>
		</tabs>
		<tabs small="true">
			<tab title="Small tabs" padding="10">
				<formula>
					<group>
						<text label="Username:"/>
						<text label="Password:"/>
					</group>
				</formula>
			</tab>
			<tab title="Small tabs" padding="10">
				<formula>
					<group>
						<text label="Note:" lines="6"/>
						<checkbox label="Checkbox:"/>
						<tokens label="Tokens:"/>
					</group>
				</formula>
			</tab>
		</tabs>
		<tabs centered="true">
			<tab title="Centered" padding="10"/>
			<tab title="Centered" padding="10"/>
		</tabs>
		<tabs small="true" centered="true">
			<tab title="Centered" padding="10"/>
			<tab title="Centered" padding="10"/>
		</tabs>
	</box>
</gui>