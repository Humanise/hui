			<button icon="colorpicker/wheel_pastels" name="wheelPastels" selected="true"/>
			<button icon="colorpicker/wheel_brightness" name="wheelBrightness"/>
		</bar>
	</window>

	<listen for="wheelBrightness">
		<click>
			wheelPastels.setSelected(false);
			wheelBrightness.setSelected(true);
		</click>
	</listen>
	<listen for="wheelPastels">
		<click>
			wheelPastels.setSelected(true);
			wheelBrightness.setSelected(false);
		</click>
	</listen>
	<script>
		win.show();
	</script>
