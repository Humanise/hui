<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xml/setup.xsl"?>
<gui xmlns="uri:hui" title="System" padding="10">
	<controller name="controller" source="list.js"/>
	<source name="itemsSource" url="data/source_items.xml"/>
	<source name="listSource" url="data/list_icons.xml"/>
	<source name="languagesSource" url="data/items_languages.xml"/>
	<script>
		hui.ui.listen({
			$ready : function() {
				newPage.show();
			}
		})
	</script>
	<structure>
		<top>
			<toolbar>
				<icon icon="common/page" title="Opret side" overlay="new" click="newPage.show()"/>
				<divider/>
				<icon icon="common/internet" overlay="upload" title="Udgiv ændringer" click="box.show()"/>
				<right>
					<search title="Søgning"/>
				</right>
			</toolbar>
		</top>
		<middle>
			<left>
				<overflow>
					<selection value="user" name="selector">
						<item icon="file/generic" title="Alle sider" value="user"/>
						<title>Hierarkier</title>
						<item icon="common/hierarchy" title="Hovedsite" value="danish" kind="hierarchy"/>
						<item icon="common/hierarchy" title="Support" value="english" kind="hierarchy"/>
						<title>Sprog</title>
						<item icon="flag/dk" title="Dansk" value="da"/>
						<item icon="flag/gb" title="Engelsk" value="en"/>
						<title>Grupper</title>
						<items source="itemsSource"/>
						<title>Oversigter</title>
						<item icon="part/news" title="Nyheder" value="news"/>
						<item icon="common/warning" title="Advarsler" value="warnings"/>
						<item icon="common/edit" title="Ændret" value="changed"/>
						<item icon="common/delete" title="Uden menupunk" value="nomenu"/>
						<item icon="common/time" title="Arkiveret" value="archive"/>
					</selection>
				</overflow>
			</left>
			<center>
				<overflow height="300" resize="-58">
					<list name="list" source="listSource"/>
				</overflow>
			</center>
		</middle>
		<bottom>
			
		</bottom>
	</structure>
	
	<window name="newPage" width="500" title="Ny side" padding="5">
		<formula>
			<fields labels="besides">
				<field label="Titel:">
					<text-input/>
				</field>
			</fields>
		</formula>
		<div style="padding: 10px; margin: 4px; background: #eee; box-shadow: inset 0 1px 5px rgba(0,0,0,.2); border-radius: 4px">
		<wizard>
			<step title="Menu" border="true">
				<overflow height="200">
					<text align="center">
						<p>Vælg det menu-punkt den nye side vises under...</p>
					</text>
					<selection name="hierarchySelection"/>
				</overflow>
			</step>
			<step title="Info" border="true">
				<overflow height="200">
				<formula>
					<fields>
						<field label="Beskrivelse:">
							<text-input lines="6"/>
						</field>
						<field label="Sti:">
							<text-input/>
						</field>
						<field label="Nøgleord:">
							<text-input/>
						</field>
						<field label="Dato:">
							<datetime-input/>
						</field>
						<field label="Sprog:">
							<dropdown>
								<item text="Dansk" value="da"/>
							</dropdown>
						</field>
						<field label="Design:">
							<dropdown source="languagesSource"/>
						</field>
						<field label="Opsætning:">
							<dropdown source="languagesSource"/>
						</field>
						<field label="Inaktiv:">
							<checkbox/>
						</field>
					</fields>
				</formula>
				</overflow>
			</step>
		</wizard>
		</div>
		<columns>
			<column>
				<div style="margin: 3px;">
					<checkbox/><span style="vertical-align: middle; font-size: 12px; color:#777;">Avanceret</span>
				</div>
			</column>
			<column>
				<buttons align="right">
					<button title="Annuller"/>
					<button title="Gem" highlighted="true"/>
				</buttons>
			</column>
		</columns>
	</window>
	<box absolute="true" name="box" padding="10" modal="true" width="500" variant="textured" title="Ny side">
		<wizard>
			<step title="Vælg skabelon" icon="file/generic">
				<picker title="Vælg skabelon"/>
			</step>
			<step title="Egenskaber">
				<formula>
					<fields labels="above">
						<field label="Titel:">
							<text-input/>
						</field>
						<field label="Sti:">
							<text-input/>
						</field>
					</fields>
				</formula>
			</step>
		</wizard>
		<buttons top="10" align="right">
			<button title="Forrige" click="box.hide()"/>
			<button title="Næste" click="box.hide()"/>
			<button title="Annuller" click="box.hide()"/>
			<button title="Gem" highlighted="true"/>
		</buttons>
	</box>
</gui>