<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:In2iGui" title="List">
	<controller name="controller" source="list.js"/>
	<source name="itemsSource" url="data/source_items.xml"/>
	<view>
		<toolbar>
			<icon icon="common/refresh" title="Refresh" action="list.refresh()"/>
			<divider/>
			<icon icon="common/user" title="List users" action="list.setUrl('data/list_users.xml')"/>
			<icon icon="common/color" title="List icons" action="list.setUrl('data/list_icons.xml')"/>
			<icon icon="common/color" title="List icons (json)" action="list.setUrl('data/list_icons.json')"/>
		</toolbar>
		<content>
			<split>
				<sidebar>
					<selection value="user" name="selector">
						<item icon="common/person" title="Brugere" value="user"/>
						<item icon="common/folder" title="Database" value="database" kind="folder"/>
						<item icon="common/person" title="Alle objekter" value="object"/>
						<title>Hey</title>
						<items source="itemsSource"/>
					</selection>
				</sidebar>
				<content>
					<overflow height="300" resize="-58">
						<list name="list" url="data/list_users.xml"/>
					</overflow>
				</content>
			</split>
		</content>
	</view>
</gui>