<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:hui" title="Indstillinger" padding="10">
	<dwr base="/dwr/">
		<interface name="AppSetup"/>
		<interface name="Common"/>
	</dwr>
	<controller name="mainController" source="main.js"/>
	<controller name="controller" source="model.js"/>
	<source name="listSource" dwr="AppSetup.listEntities">
		<parameter key="state" value="@list.window"/>
		<parameter key="type" value="@selection.value"/>
		<parameter key="search" value="@search.value"/>
	</source>
	<source name="classSource" dwr="Common.getClasses"/>
	<structure>
		<top>
			<toolbar>
				<right>
					<searchfield name="search" title="Search" expandedWidth="200"/>
				</right>
			</toolbar>
		</top>
		<middle>
			<left>
				<overflow>
					<selection value="dk.in2isoft.onlineobjects.model.Entity" name="selection">
						<item icon="common/object" title="All classes" value="dk.in2isoft.onlineobjects.model.Entity"/>
						<title>Classes</title>
						<items name="classes" source="classSource"/>
					</selection>
				</overflow>
			</left>
			<center>
				<overflow>
					<list name="list" source="listSource"/>
				</overflow>
			</center>
		</middle>
		<bottom/>
	</structure>
	<window name="entityEditor" width="300" padding="5">
		<formula name="entityFormula">
			<group>
				<checkbox label="Modify:" key="publicAlter"/>
				<checkbox label="View:" key="publicView"/>
				<checkbox label="Delete:" key="publicDelete"/>
			</group>
			<buttons>
				<button title="Update" name="updateEntity" highlighted="true"/>
			</buttons>
		</formula>
	</window>
	<window name="userEditor" title="User" padding="5" width="300">
		<formula name="userFormula">
			<group>
				<text label="Username:" key="username"/>
				<text secret="true" label="Password:" key="password"/>
			</group>
			<buttons>
				<button title="Delete" name="deleteUser"/>
				<button title="Update" name="saveUser" highlighted="true"/>
			</buttons>
		</formula>
	</window>
</gui>