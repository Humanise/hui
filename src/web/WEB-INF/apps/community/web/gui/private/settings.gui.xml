<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:In2iGui" title="Indstillinger">
	<dwr base="/dwr/">
		<interface name="CoreSecurity"/>
		<interface name="AppCommunity"/>
	</dwr>
	<controller name="controller" source="../../gui/private/controller.js"/>
	<controller name="settingsController" source="../../gui/private/settings.js"/>
	<view>
		<toolbar>
			<icon icon="common/settings" title="Indstillinger" selected="true"/>
			<divider/>
			<icon icon="common/person" title="Personer" name="toolPersons"/>
			<icon icon="common/image" title="Billeder" name="toolImages"/>
			<icon icon="common/internet" title="Bogmærker" name="toolBookmarks"/>
			<right>
				<icon icon="common/close" title="Tilbage til website" name="close"/>
			</right>
		</toolbar>
		<content>
			<space height="20"/>
			<box width="600" title="Indstillinger">
				<formula name="personFormula">
					<space all="10">
						<horizontal space="20">
							<content>
								<header>Navn</header>
								<group>
									<text label="Præfiks" name="namePrefix"/>
									<text label="Fornavn" name="givenName"/>
									<text label="Efternavn" name="familyName"/>
									<text label="Suffiks" name="nameSuffix"/>
								</group>
							</content>
							<content>
								<header>E-post</header>
								<group>
								<objectlist name="mails">
									<text label="E-post" key="address"/>
									<text label="Kontekst" key="context"/>
								</objectlist>
								</group>
							</content>
						</horizontal>
						<horizontal>
							<content>
								<group>
									<button title="Gem" name="savePerson" highlighted="true"/>
								</group>
							</content>
						</horizontal>
					</space>
				</formula>
			</box>
		</content>
	</view>
</gui>
