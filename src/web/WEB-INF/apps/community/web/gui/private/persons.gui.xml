<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:In2iGui" state="persons" title="Persons">
	<dwr base="/dwr/">
		<interface name="CoreSecurity"/>
		<interface name="AppCommunity"/>
	</dwr>
	<controller name="controller" source="../../gui/private/controller.js"/>
	<controller name="personsController" source="../../gui/private/persons.js"/>
	<view>
		<toolbar>
			<icon icon="common/settings" title="Indstillinger" name="toolSettings"/>
			<divider/>
			<icon icon="common/person" title="Personer" selected="true" name="toolPersons"/>
			<icon icon="common/image" title="Billeder" name="toolImages"/>
			<right>
				<icon icon="common/close" title="Tilbage til website" name="close"/>
			</right>
		</toolbar>
		<content pad="20">
			<view style="box">
				<toolbar>
					<icon icon="common/person" overlay="new" title="Ny person" name="newPerson"/>
					<icon icon="common/letter" overlay="new" title="Ny invitation" name="newInvitation"/>
				</toolbar>
				<content>
					<split>
						<sidebar>
							<selection value="persons">
								<item icon="common/person" title="Alle personer" value="persons"/>
								<item icon="common/letter" title="Invitationer" value="invitations"/>
							</selection>
						</sidebar>
						<content>
							<overflow resize="-190">
							<list name="personList" state="persons">
								<column title="Navn" key="name"/>
								<column title="E-mail" key="email"/>
								<column title="Telefon" key="phone"/>
							</list>
							<list name="invitationList" state="invitations">
								<column title="Dato" key="created"/>
								<column title="Inviteret" key="person"/>
								<column title="Status" key="state"/>
							</list>
							</overflow>
						</content>
					</split>
				</content>
				<foot>
					
				</foot>
			</view>
		</content>
	</view>
	<window name="personWindow" title="Person" width="500">
		<space all="10">
		<formula name="personFormula">			
			<horizontal space="10">
				<content>
					<group labels="above">
						<text label="Fornavn" key="givenName"/>
					</group>
				</content>
				<content>
					<group labels="above">
						<text label="Mellemnavn" key="additionalName"/>
					</group>
				</content>
				<content>
					<group labels="above">
						<text label="Efternavn" key="familyName"/>
					</group>
				</content>
			</horizontal>
			<horizontal space="10">
				<content>
					<group labels="above">
						<text label="PrÃ¦fiks" key="namePrefix"/>
					</group>
				</content>
				<content>
					<group labels="above">
						<text label="Postfiks" key="nameSuffix"/>
					</group>
				</content>
			</horizontal>
			<space height="10"/>
			<horizontal space="10">
				<content>
					<group labels="above">
						<custom>
						<objectlist name="personEmails">
							<text label="E-mail" key="address"/>
							<text label="Kontekst" key="context"/>
						</objectlist>
						</custom>
					</group>
				</content>
				<content>
					<group labels="above">
						<custom>
						<objectlist name="personPhones">
							<text label="Telefonnummer" key="number"/>
							<text label="Kontekst" key="context"/>
						</objectlist>
						</custom>
					</group>
				</content>
			</horizontal>
			<space height="10"/>
			<buttons>
				<button title="Gem" highlighted="true" name="savePerson"/>
				<button title="Annuller" name="cancelPerson"/>
			</buttons>
		</formula>
		</space>
	</window>
	<window floating="true" name="invitationWindow" title="Ny invitation" width="300">
		<formula name="invitationFormula">
			<group>
				<text label="Navn" key="name"/>
				<text label="E-mail" key="email"/>
				<text label="Besked" key="message" lines="10"/>
				<button title="Send" highlighted="true" name="sendInvitation"/>
			</group>
		</formula>
	</window>
</gui>
