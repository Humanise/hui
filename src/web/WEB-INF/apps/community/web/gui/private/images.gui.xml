<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:In2iGui" state="persons" title="Images">
	<dwr base="/dwr/">
		<interface name="Common"/>
		<interface name="AppCommunity"/>
	</dwr>
	<controller name="controller" source="../../gui/private/controller.js"/>
	<controller name="imagesController" source="../../gui/private/images.js"/>
	<view>
		<toolbar>
			<icon icon="common/settings" title="Indstillinger" name="toolSettings"/>
			<divider/>
			<icon icon="common/person" title="Personer" name="toolPersons"/>
			<icon icon="common/image" title="Billeder" selected="true" name="toolImages"/>
			<right>
				<icon icon="common/close" title="Tilbage til website" name="close"/>
			</right>
		</toolbar>
		<content pad="20">
			<view style="box">
				<toolbar>
					<icon icon="common/image" overlay="new" title="Tilføj billeder" name="newImage"/>
					<divider/>
					<icon icon="common/play" title="Lysbilledshow" name="slideShow"/>
					<icon icon="common/delete" title="Slet" name="deleteSelectedImage"/>
					<search title="Søgning"/>
				</toolbar>
				<content>
					<split>
						<sidebar>
							<selection value="all">
								<item icon="common/image" title="Alle billeder" value="all"/>
							</selection>
						</sidebar>
						<content>
							<overflow resize="-190">
								<gallery name="imageGallery" state="persons"/>
							</overflow>
						</content>
					</split>
				</content>
				<foot>
					
				</foot>
			</view>
		</content>
	</view>
	<window name="newImageWindow" title="Nyt billede" width="300" variant="dark">
		<multiupload name="imageUpload" url="images/upload.action"/>
	</window>
	<window name="imageWindow" title="Egenskaber" width="300" variant="dark">
		<space all="5">
			<formula name="imageFormula">
				<group>
					<text label="Navn" key="name"/>
					<text label="Beskrivelse" key="description" lines="6"/>
					<tokens label="Nøgleord" key="tags"/>
					<buttons>
						<button title="Gem" highlighted="true" name="saveImage"/>
						<button title="Annuller" name="cancelImage"/>
						<button title="Slet" name="deleteImage"/>
					</buttons>
				</group>
			</formula>
		</space>
	</window>
</gui>