<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:hui">
	<dwr base="/dwr/">
		<interface name="Common"/>
		<interface name="CoreSecurity"/>
		<interface name="AppDesktop"/>
	</dwr>
	<style>
		div.hui_keyboardnavigator
		{
			display: none;
			left: 50%;
			top: 50%;
			position: absolute;
			background: rgba(0,0,0,.5);
			color: #fff;
			font-size: 18px;
			border-radius: 5px;
			width: 300px;
		}
		
		p.hui_keyboardnavigator_input
		{
			margin: 0;
			padding: 3px 8px;
			background: rgba(0,0,0,.4);
			margin: 2px;
			border-radius: 4px;
		}
		
		div.hui_keyboardnavigator li
		{
			padding: 3px 8px;
			overflow: hidden;
			margin: 2px;
			border-radius: 4px;
		}
		
		div.hui_keyboardnavigator ul
		{
			list-style: none;
			margin: 0;
			padding: 0;
		}
		li.hui_keyboardnavigator_selected
		{
			background: #000;
		}
	</style>
	<controller source="js/ctrl.js"/>
</gui>