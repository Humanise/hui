<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:hui" pad="10" title="Style">
	<controller name="controller" source="formula.js"/>
	<source name="itemsSource" url="data/source_items.xml"/>
	<box width="600" variant="textured">
		<toolbar>
			<field label="Number input:">
				<number-input key="style" value="15"/>
			</field>
			<field label="Style length:">
				<style-length-input key="style" value="15px"/>
			</field>
			<field label="Alignment">
				<segmented value="left" name="segmentedBar">
					<item icon="edit/text_align_left" value="left"/>
					<item icon="edit/text_align_center" value="center"/>
					<item icon="edit/text_align_right" value="right"/>
				</segmented>
			</field>
			<field label="Alignment (allow null)">
				<segmented value="left" name="segmentedBarNull" allow-null="true">
					<item icon="edit/text_align_left" value="left"/>
					<item icon="edit/text_align_center" value="center"/>
					<item icon="edit/text_align_right" value="right"/>
				</segmented>
			</field>
		</toolbar>
		<tabs>
			<tab title="Formula 1" padding="10">
				<formula name="formula1">
					<fields labels="above">
						<field label="Style length:">
							<style-length-input key="style" value="15px"/>
						</field>
						<field label="Color">
							<color-input key="color" value="red"/>
						</field>
					</fields>
					<buttons top="10">
						<button title="Slet"/>
						<button title="Annuller"/>
						<button title="Gem" highlighted="true"/>
					</buttons>
				</formula>
				<segmented value="left" name="segmented">
					<item icon="edit/text_align_left" value="left"/>
					<item icon="edit/text_align_right" value="right"/>
					<item title="Click me!"/>
				</segmented>
				<button click="segmented.setValue('right')" title="Set right" small="true" rounded="true"/>
				<button click="alert(segmented.getValue())" title="Alert value" small="true" rounded="true"/>
			</tab>
		</tabs>
	</box>
</gui>