<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:hui" padding="10" title="Button">
	<box width="800" title="Buttons" variant="textured" padding="10">
		<button name="one" title="Simple button"/>
		<button name="disabledButton" title="Disabled button" disabled="true"/>
		<button title="Highlighted button" highlighted="true"/>
		<button title="Highlighted button" highlighted="true" disabled="true"/>
		<space height="10"/>
		<button icon="common/delete"/>
		<button icon="common/delete" text="Delete"/>
		<button icon="monochrome/delete" text="Delete"/>
		<button icon="monochrome/close" text="Cancel"/>
		
		<space height="20"/>
		
		<button text="Small" small="true"/>
		<button text="Small" disabled="true" small="true"/>
		<button text="Small" small="true" highlighted="true"/>
		<button text="Small" disabled="true" small="true" highlighted="true"/>
		
		<button text="Small" small="true" icon="monochrome/delete"/>
		<button text="Small" small="true" icon="monochrome/edit"/>
		<button small="true" icon="monochrome/info"/>
		<button small="true" icon="monochrome/info_light" highlighted="true"/>
		<button small="true" icon="monochrome/edit"/>
		
		<space height="20"/>
		
		<header>light variant</header>
		<button variant="light" text="Light variant"/>
		<button variant="light" text="light variant disabled" disabled="true"/>
		<button variant="light" text="light variant" icon="monochrome/delete"/>
		<button variant="light" icon="monochrome/delete"/>
		<button variant="light" text="light variant (small)" small="true"/>
		<button variant="light" text="light variant (small + disabled)" small="true" disabled="true"/>
		<button variant="light" text="light variant (mini)" mini="true"/>
		<button variant="light" text="light variant (mini + disabled)" mini="true" disabled="true"/>
		<header>Actions</header>
		<button title="Confirmation" click="hui.ui.showMessage({text:'Action approved!',duration:2000})">
			<confirm text="Are you sure?" ok="Yes" cancel="No"/>
		</button>

	</box>
</gui>