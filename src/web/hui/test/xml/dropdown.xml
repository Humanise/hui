<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:In2iGui" padding="10" title="Drop down">
	<controller name="controller" source="dropdown.js"/>
	<source name="itemsSource" url="data/items_languages.xml"/>
	<box width="600" title="Drop down" variant="textured" padding="10">
		<toolbar>
			<icon icon="common/folder" title="Show values" name="showValues"/>
			<icon icon="common/color" title="Refresh source" action="itemsSource.refresh()"/>
			<icon icon="common/folder" title="Build" name="build"/>
		</toolbar>
		<formula name="formula">
			<group labels="above">
				<dropdown label="Predefined items:" name="predefined" value="2">
					<item title="Lorem inpsum" value="1"/>
					<item title="Consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua" value="2"/>
					<item title="Ut enim ad minim veniam" value="3"/>
					<item title="Excepteur sint occaecat" value="4"/>
				</dropdown>
				<dropdown label="From source:" name="fromSource" value="en" source="itemsSource"/>
				<dropdown label="From url:" name="fromUrl" url="data/items_loremipsum.xml"/>
			</group>
		</formula>
	</box>
</gui>