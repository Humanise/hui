<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:In2iGui" pad="10" title="Formula">
	<controller name="controller" source="formula.js"/>
	<source name="itemsSource" url="data/source_items.xml"/>
	<box width="600" title="Title with toolbars" variant="textured">
		<toolbar>
			<icon icon="common/color" title="Hep hey!" selected="true"/>
			<icon icon="common/folder" title="Show values" name="showValues"/>
			<icon icon="common/settings" title="Hep hey!" disabled="true"/>
			<icon icon="common/folder" title="Show window" click="win.show();"/>
		</toolbar>
		<tabs>
			<tab title="Formula 1" padding="10">
				<formula name="formula1">
					<fieldset legend="This is a group">
					<group labels="above">
						<dropdown label="Template:" key="template" value="2">
							<item title="Lorem inpsum" value="1"/>
							<item title="Consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua" value="2"/>
							<item title="Ut enim ad minim veniam" value="3"/>
							<item title="Excepteur sint occaecat" value="4"/>
						</dropdown>
						<text label="Brugernavn:" key="username"/>
						<text secret="true" label="Kodeord:" key="password"/>
						<text label="Notat:" lines="6" key="note"/>
						<number label="Number:" key="number"/>
						<number label="Number (min -300):" key="number2" min="-300"/>
						<number label="Number (min 300):" key="number2" min="300"/>
						<style-length label="Style length:" key="style" value="15px"/>
					</group>
					</fieldset>
						<buttons top="10">
							<button title="Gem" highlighted="true"/>
							<button title="Slet"/>
							<button title="Annuller"/>
						</buttons>
				</formula>
			</tab>
			<tab title="Formula 2" padding="10">
				<formula name="formula2">
					<group>
						<dropdown label="Template:" key="template" source="itemsSource" value="c"/>
						<text label="Brugernavn:" key="username"/>
						<password label="Kodeord:" key="password"/>
						<text label="Notat:" lines="6" key="note"/>
						<datetime label="Date (secs):" key="date-seconds" return-type="seconds"/>
						<datetime label="Date:" key="date"/>
						<checkbox label="Internal access:" key="internal"/>
						<checkbox label="External access:" key="external"/>
						<checkboxes label="Groups:" key="groups">
							<source url="source_items.xml"/>
						</checkboxes>
						<tokens label="Tokens:" key="tokens"/>
						<radiobuttons label="Radios:" key="radios">
							<radiobutton label="Lorem" value="lorem"/>
							<radiobutton label="Ipsum" value="ipsum"/>
							<radiobutton label="Dolor" value="dolor"/>
						</radiobuttons>
						<custom label="Object list:">
							<objectlist key="objectlist">
								<text key="email" label="E-mail"/>
								<select key="context" label="Context">
									<option value="home" label="Home"/>
									<option value="work" label="Work"/>
									<option value="school" label="School"/>
								</select>
							</objectlist>
						</custom>
						<buttons top="10">
							<button title="Gem" highlighted="true"/>
							<button title="Slet"/>
							<button title="Annuller"/>
						</buttons>
					</group>
				</formula>
			</tab>
		</tabs>
	</box>
</gui>