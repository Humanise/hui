<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:hui" padding="10" title="Tabs">
	<box width="400">
		<tabs>
			<tab title="Large tabs" padding="10">
				<formula>
					<fields>
						<field label="Username:">
							<text-input/>
						</field>
						<field label="Password:">
							<text-input/>
						</field>
					</fields>
				</formula>
			</tab>
			<tab title="Large tabs" padding="10">
			</tab>
		</tabs>
		<tabs small="true">
			<tab title="Small tabs" padding="10">
				<formula>
					<fields>
						<field label="Username:">
							<text-input/>
						</field>
						<field label="Password:">
							<text-input/>
						</field>
					</fields>
				</formula>
			</tab>
			<tab title="Small tabs" padding="10">
				<formula>
					<fields>
						<field label="Note:">
							<text-input lines="6"/>
						</field>
						<field label="Checkbox:">
							<checkbox/>
						</field>
						<field label="Tokens:">
							<tokens/>
						</field>
					</fields>
				</formula>
			</tab>
		</tabs>
		<tabs centered="true">
			<tab title="Centered" padding="10"/>
			<tab title="Centered" padding="10"/>
		</tabs>
		<tabs small="true" centered="true">
			<tab title="Centered" padding="10"/>
			<tab title="Centered" padding="10"/>
		</tabs>
	</box>
</gui>