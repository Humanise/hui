<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xml/setup.xsl"?>
<gui xmlns="uri:hui" title="System" padding="10">
	<source name="hierarchySource" url="data/hierarchy.xml"/>
	<source name="listSource" url="data/list_pages.xml"/>
	<source name="languagesSource" url="data/languages.xml"/>
	<controller source="articles.js"/>
	<structure>
		<top>
			<toolbar>
				<icon icon="common/page" title="Ny artikel" overlay="new" click="newPage.show()"/>
				<more>
					<icon icon="common/hierarchy_item" title="Nyt punkt" overlay="new" click="newPage.show()"/>
					<icon icon="common/hierarchy" title="Nyt hierarki" overlay="new" click="box.show()"/>
					<icon icon="common/template" title="Ny skabelon" overlay="new" click="newPage.show()"/>
				</more>
				<divider/>
				<icon icon="common/edit" title="Edit" name="edit" disabled="true"/>
				<icon icon="common/info" title="Info" name="info" disabled="true"/>
				<icon icon="common/view" title="Show" name="view" disabled="true"/>
				<icon icon="common/delete" title="Delete" name="delete" disabled="true">
					<confirm text="Are you sure? It cannot be undone" ok="Yes, delete" cancel="Cancel"/>
				</icon>
				<icon icon="common/internet" overlay="upload" title="Udgiv ændringer" click="pages.next()"/>
				<right>
					<field label="Søgning">
						<searchfield name="search"/>
					</field>
				</right>
			</toolbar>
		</top>
		<middle>
			<left>
				<overflow>
					<selection value="user" name="selector">
						<item icon="common/page" title="Alle sider" value="all"/>
						<item icon="common/time" title="Seneste" badge="10" value="latest"/>
						<item icon="common/draft" title="Klader" badge="5" value="drafts"/>
						<item icon="common/duplicate" title="Skabeloner" badge="2" value="templates"/>
						<item icon="common/star" title="Favorites" badge="12" value="favorites"/>
						<title>Sprog</title>
						<item icon="flag/dk" title="Dansk" value="da"/>
						<item icon="flag/gb" title="Engelsk" value="en"/>
						<title>Grupper</title>
						<item icon="common/folder" title="Mine sider" value="warnings"/>
						<title>Oversigter</title>
						<item icon="monochrome/news" title="Nyheder" value="news"/>
						<item icon="monochrome/warning" title="Advarsler" value="warnings"/>
						<item icon="monochrome/edit" title="Ændret" value="changed"/>
						<item icon="monochrome/delete" title="Uden menupunk" value="nomenu"/>
						<item icon="monochrome/archive" title="Arkiveret" value="archive"/>
					</selection>
				</overflow>
			</left>
			<center>
				<pages height="full" name="pages">
					<page key="list">
						<overflow>
							<list name="list" source="listSource"/>
						</overflow>
					</page>
					<page key="viewpage" background="wood">
						<bar variant="layout">
							<button text="Close" click="pages.next()" small="true"/>
						</bar>
						<columns flexible="true">
							<column width="200px">
							</column>
							<column>
								<box>
								<formula>
									<fields>
										<field label="Beskrivelse:">
											<text-input lines="6"/>
										</field>
										<field label="Sti:">
											<text-input/>
										</field>
										<!--
										<field label="Nøgleord:">
											<text-input/>
										</field>
										<field label="Dato:">
											<datetime-input/>
										</field>
										-->
										<field label="Sprog:">
											<dropdown source="languagesSource"/>
										</field>
										<field label="Design:">
											<dropdown/>
										</field>
										<field label="Opsætning:">
											<dropdown/>
										</field>
										<field label="Inaktiv:">
											<checkbox/>
										</field>
									</fields>
								</formula>
								</box>
							</column>
						</columns>
					</page>
				</pages>
			</center>
		</middle>
		<bottom>
			
		</bottom>
	</structure>
	
	<window name="newPage" width="500" title="Ny side" padding="5">
		<formula>
			<fields labels="besides">
				<field label="Titel:">
					<text-input/>
				</field>
			</fields>
		</formula>
		<div style="padding: 10px; margin: 4px; background: #eee; box-shadow: inset 0 1px 5px rgba(0,0,0,.2); border-radius: 4px">
		<wizard selection-width="150" name="wizard">
			<step title="Menupunkt" icon="common/hierarchy" border="true">
				<overflow height="200">
					<text align="center">
						<p>Vælg det menu-punkt den nye side vises under...</p>
					</text>
					<selection name="hierarchySelection">
						<items source="hierarchySource"/>
					</selection>
				</overflow>
				<buttons small="true" top="5">
					<button text="Intet menupunkt"/>
				</buttons>
			</step>
			<step title="Info" icon="common/info" border="true">
				<overflow height="200">
				<formula>
					<fields>
						<field label="Beskrivelse:">
							<text-input lines="6"/>
						</field>
						<field label="Sti:">
							<text-input/>
						</field>
						<!--
						<field label="Nøgleord:">
							<text-input/>
						</field>
						<field label="Dato:">
							<datetime-input/>
						</field>
						-->
						<field label="Sprog:">
							<dropdown source="languagesSource"/>
						</field>
						<field label="Design:">
							<dropdown/>
						</field>
						<field label="Opsætning:">
							<dropdown/>
						</field>
						<field label="Inaktiv:">
							<checkbox/>
						</field>
					</fields>
				</formula>
				</overflow>
			</step>
		</wizard>
		</div>
		<columns flexible="true">
			<column>
				<div style="margin: 3px;">
					<checkbox label="Avanceret"/>
				</div>
			</column>
			<column>
				<buttons align="right">
					<button title="Annuller"/>
					<button title="Opret" highlighted="true"/>
				</buttons>
			</column>
		</columns>
	</window>
	
	<box absolute="true" name="box" padding="10" modal="true" width="500" variant="textured" title="Ny side">
		<wizard>
			<step title="Vælg skabelon" icon="file/generic">
				<picker title="Vælg skabelon"/>
			</step>
			<step title="Egenskaber">
				<formula>
					<fields labels="above">
						<field label="Titel:">
							<text-input/>
						</field>
						<field label="Sti:">
							<text-input/>
						</field>
					</fields>
				</formula>
			</step>
		</wizard>
		<buttons top="10" align="right">
			<button title="Forrige" click="box.hide()"/>
			<button title="Næste" click="box.hide()"/>
			<button title="Annuller" click="box.hide()"/>
			<button title="Gem" highlighted="true"/>
		</buttons>
	</box>
</gui>