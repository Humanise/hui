<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xml/setup.xsl"?>
<gui xmlns="uri:hui" pad="10" title="Box">
	<box width="400" padding="10" top="100" variant="textured">
		<formula name="formula">
			<header>New event</header>
			<space height="5"/>
			<fields>
				<field label="Title:">
					<text-input/>
				</field>
				<field label="Place:">
					<text-input/>
				</field>
				<field label="Type:">
					<dropdown value="0">
						<item title="Other" value="0"/>
						<item title="Work function" value="1"/>
					</dropdown>
				</field>
				<field label="Start date:">
					<datetime-input/>
				</field>
				<field label="End date:">
					<datetime-input/>
				</field>
				<buttons top="5">
					<button title="Cancel"/>
					<button title="Delete" click="hui.ui.showMessage({text:'Deleting...',busy:true,duration:3000})">
						<confirm text="Are you sure?" ok="Yes, delete"/>
					</button>
					<button title="Create" highlighted="true"/>
				</buttons>
			</fields>
		</formula>
	</box>
</gui>