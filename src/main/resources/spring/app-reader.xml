<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
    ">

   	<bean id="internetAddressViewPerspectiveBuilder" class="dk.in2isoft.onlineobjects.apps.reader.perspective.InternetAddressViewPerspectiveBuilder" autowire="byType">
   		<property name="contentExtractors">
   			<map>
   				<entry key="OnlineObjects">
   					<bean class="dk.in2isoft.onlineobjects.modules.information.SimpleContentExtractor"/>
   				</entry>
   				<entry key="Boilerpipe">
   					<bean class="dk.in2isoft.onlineobjects.modules.information.Boilerpipe"/>
   				</entry>
   				<entry key="Readability">
   					<bean class="dk.in2isoft.onlineobjects.modules.information.ReadabilityExtractor"/>
   				</entry>
   			</map>
   		</property>
   	</bean>
   	
   	<bean id="questionViewPerspectiveBuilder" class="dk.in2isoft.onlineobjects.apps.reader.perspective.QuestionViewPerspectiveBuilder" autowire="byType"/>
   	<bean class="dk.in2isoft.onlineobjects.apps.reader.perspective.HypothesisViewPerspectiveBuilder" autowire="byType"/>

   	<bean id="readerController" class="dk.in2isoft.onlineobjects.apps.reader.ReaderController" autowire="byType"/>
   	
   	<bean id="readerModelService" class="dk.in2isoft.onlineobjects.apps.reader.ReaderModelService" autowire="byType"/>
   	
   	<bean class="dk.in2isoft.onlineobjects.apps.reader.index.ReaderIndexer">
   		<property name="documentBuilder" ref="readerIndexDocumentBuilder"/>
   		<property name="indexService" ref="indexService"/>
   		<property name="modelService" ref="modelService"/>
   		<property name="pileService" ref="pileService"/>
   	</bean>
   	
   	<bean class="dk.in2isoft.onlineobjects.apps.reader.ReaderSearcher">
   		<property name="indexService" ref="indexService"/>
   		<property name="modelService" ref="modelService"/>
   	</bean>

   	<bean id="readerIndexDocumentBuilder" class="dk.in2isoft.onlineobjects.apps.reader.index.ReaderIndexDocumentBuilder">
   		<property name="storageService" ref="storageService"/>
   		<property name="modelService" ref="modelService"/>
   		<property name="securityService" ref="securityService"/>
   		<property name="pileService" ref="pileService"/>
   	</bean>
   	
   	<bean id="readerView" scope="request" class="dk.in2isoft.onlineobjects.apps.reader.views.ReaderView">
   		<property name="builder" ref="internetAddressViewPerspectiveBuilder"/>
   	</bean>
   	
   	<bean id="readerAnalyzeView" scope="request" class="dk.in2isoft.onlineobjects.apps.reader.views.ReaderAnalyzeView" autowire="byType"/>
</beans>