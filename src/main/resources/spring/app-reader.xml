<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
    ">

   	<bean id="readerController" class="dk.in2isoft.onlineobjects.apps.reader.ReaderController" autowire="byType"/>
   	
   	<bean class="dk.in2isoft.onlineobjects.apps.reader.index.ReaderIndexer">
   		<property name="documentBuilder" ref="readerIndexDocumentBuilder"/>
   		<property name="indexService" ref="indexService"/>
   		<property name="modelService" ref="modelService"/>
   	</bean>

   	<bean id="readerIndexDocumentBuilder" class="dk.in2isoft.onlineobjects.apps.reader.index.ReaderIndexDocumentBuilder">
   		<property name="storageService" ref="storageService"/>
   		<property name="modelService" ref="modelService"/>
   		<property name="securityService" ref="securityService"/>
   		<property name="pileService" ref="pileService"/>
   	</bean>
   	
   	<bean id="readerView" scope="request" class="dk.in2isoft.onlineobjects.apps.reader.views.ReaderView">
   	</bean>
</beans>