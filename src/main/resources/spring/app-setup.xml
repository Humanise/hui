<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
  	xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
        http://www.directwebremoting.org/schema/spring-dwr
    	http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd
    ">

   	
   	<bean id="setupRemotingFacade" class="dk.in2isoft.onlineobjects.apps.setup.SetupRemotingFacade" autowire="byType">
    	 <dwr:remote javascript="AppSetup">
    	 	<dwr:include method="listImages"/>
    	 	<dwr:include method="changeAdminPassword"/>
    	 	<dwr:include method="listJobs"/>
    	 	<dwr:include method="listUsers"/>
    	 	<dwr:include method="listEntities"/>
    	 	<dwr:include method="getImageTags"/>
    	 	<dwr:include method="startJob"/>
    	 	<dwr:include method="updateUser"/>
    	 	<dwr:include method="deleteUser"/>
    	 	<dwr:include method="synchronizeImageMetaData"/>
    	 	<dwr:include method="getEntityInfo"/>
    	 	<dwr:include method="updateEntityInfo"/>
    	 	<dwr:include method="getSurveillanceList"/>
    	 	<dwr:include method="getApplicationList"/>
    	 	<dwr:include method="getApplication"/>
    	 	<dwr:include method="saveApplication"/>
    	 	<dwr:filter class="dk.in2isoft.onlineobjects.ui.DWRFilter"/>
    	 </dwr:remote>
   	</bean>
   	
   	<bean id="setupController" class="dk.in2isoft.onlineobjects.apps.setup.SetupController" autowire="byType"/>
   	
    <dwr:configuration>
	    <dwr:convert type="bean" class="dk.in2isoft.onlineobjects.apps.setup.EntityInfo"/>
	    <dwr:convert type="bean" class="dk.in2isoft.onlineobjects.apps.setup.ApplicationInfo"/>
	</dwr:configuration>
</beans>