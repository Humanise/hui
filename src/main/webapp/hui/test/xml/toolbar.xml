<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup.xsl"?>
<gui xmlns="uri:hui" title="Toolbar" padding="10">
	<source name="itemsSource" url="data/source_items.xml"/>
	<script>
		hui.ui.listen({
			$ready : function() {
				pageEditor.show();
			}
		})
	</script>
	<structure>
		<top>
			<toolbar>
				<icon icon="common/refresh" title="Refresh" click="list.refresh()"/>
				<divider/>
				<icon icon="common/user" title="List users" selected="true"/>
				<divider/>
				<field label="Venstre">
					<number-input/>
				</field>
				<field label="Billedgruppe">
					<dropdown placeholder="Vælg..." source="itemsSource"/>
				</field>
				<grid>
					<row>
						<cell label="Max antal:">
							<number-input/>
						</cell>
						<cell label="Gruppe:">
							<dropdown value="1">
								<item title="Lorem inpsum" value="1"/>
								<item title="Consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua" value="2"/>
								<item title="Ut enim ad minim veniam" value="3"/>
								<item title="Excepteur sint occaecat" value="4"/>
							</dropdown>
						</cell>
					</row>
					<row>
						<cell label="Min antal:">
							<number-input/>
						</cell>
						<cell label="">
							<text-input/>
						</cell>
					</row>
				</grid>
				<field label="Level">
					<segmented value="1">
						<item text="1" value="1"/>
						<item text="2" value="2"/>
						<item text="3" value="3"/>
						<item text="4" value="4"/>
						<item text="5" value="5"/>
						<item text="6" value="6"/>
					</segmented>
				</field>
				<button title="Small button" small="true"/>
				<button title="Regular button"/>
				<right>
					<field label="Søgning">
						<searchfield expanded-width="200" placeholder="Search"/>
					</field>
				</right>
			</toolbar>
		</top>
		<middle>
			<left>
				<selection value="user" name="selector">
					<item icon="common/person" title="Brugere" value="user"/>
					<item icon="common/folder" title="Database" value="database" kind="folder"/>
					<item icon="common/person" title="Alle objekter" value="object"/>
					<title>Hey</title>
					<items source="itemsSource"/>
				</selection>
			</left>
			<center>
				<toolbar border="bottom">
					<icon icon="common/folder" title="Folder"/>
					<button title="Click me" small="true" rounded="true"/>
					<dropdown placeholder="Vælg..." source="itemsSource"/>
					<!--<text-input width="100"/>-->
					<more text="More">
						<button title="Click me" small="true" rounded="true"/>
					</more>
					<right>
						<field label="Search">
						<searchfield expanded-width="200" placeholder="Search"/>
						</field>
					</right>
				</toolbar>
				<overflow>
					<list name="list" url="data/list_users.xml"/>
				</overflow>
				<toolbar border="top">
					<button title="Click me" small="true" rounded="true"/>
					<dropdown placeholder="Vælg..." source="itemsSource"/>
					<right>
						<searchfield expanded-width="200" placeholder="Search"/>
					</right>
				</toolbar>
			</center>
		</middle>
		<bottom>
			<toolbar>
				<button title="Click me" small="true" rounded="true"/>
				<button title="Click me" small="true" rounded="true"/>
				<right>
					<searchfield expanded-width="200" placeholder="Search"/>
				</right>
			</toolbar>
		</bottom>
	</structure>
	
	<window name="pageEditor" width="300" title="Side">
		<toolbar centered="true" variant="window">
			<icon icon="common/edit" text="Edit"/>
		</toolbar>
		<toolbar variant="window">
			<icon icon="common/info" text="Info"/>
			<right>
				<icon icon="common/edit" text="Edit"/>
			</right>
		</toolbar>
		<formula name="pageFormula" padding="5">
			<fields labels="above">
				<field label="Titel:">
					<text-input key="title"/>
				</field>
				<field label="Beskrivelse:">
					<text-input key="description" lines="5"/>
				</field>
			</fields>
			<fields>
				<buttons>
					<button name="cancelPage" title="Annuller"/>
					<button name="deletePage" title="Slet">
						<confirm text="Er du sikker? Det kan ikke fortrydes!" ok="Ja, slet side" cancel="Annuller"/>
					</button>
					<button name="savePage" title="Gem" highlighted="true"/>
				</buttons>
			</fields>
		</formula>
	</window>
</gui>