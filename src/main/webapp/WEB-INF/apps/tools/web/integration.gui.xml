<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:hui" title="Persons">
	<dwr base="/dwr/">
		<interface name="Common"/>
		<interface name="CoreSecurity"/>
		<interface name="AppCommunityTools"/>
	</dwr>
	<controller name="controller" source="../controller.js"/>
	<controller source="../integration.js"/>
	<source name="accountsSource" dwr="AppCommunityTools.listAccounts"/>
	<bar>
		<button text="Offentligt" icon="inset/public" name="barPublic"/>
		<button text="Hjemmeside" icon="inset/globe" name="barWebsite"/>
		<button text="Værktøjer" icon="inset/tools" name="barTools" highlighted="true"/>
		<right>
			<button text="{username}" icon="inset/user" name="barUser"/>
			<button text="Log ud" icon="inset/cross" name="barLogOut"/>
		</right>
	</bar>

	<toolbar variant="dock">
		<icon icon="common/image" title="Billeder" name="toolImages"/>
		<icon icon="common/person" title="Personer" name="toolPersons"/>
		<icon icon="common/internet" title="Bogmærker" name="toolBookmarks"/>
		<icon icon="common/settings" title="Integration" selected="true" name="toolIntegration"/>
	</toolbar>

	<div style="position: fixed; top: 90px; bottom: 0; left: 0; right: 0; padding: 10px;">
		<structure>
			<top>
				<toolbar>
					<icon icon="common/user" overlay="new" title="Ny konto" name="newAccount"/>
				</toolbar>
			</top>
			<middle>
				<left>
					<selection value="accounts">
						<item icon="common/user" title="Alle konti" value="accounts"/>
					</selection>
				</left>
				<center>
					<overflow>
						<list name="accountsList" source="accountsSource">
							<column title="Brugernavn" key="username"/>
							<column title="Domæne" key="domain"/>
						</list>
					</overflow>
				</center>
			</middle>
			<bottom/>
		</structure>
	</div>

	<window floating="true" name="accountWindow" title="Konto" width="300" padding="10">
		<formula name="accountFormula">
			<fields>
				<field label="Username">
					<text-input key="username"/>
				</field>
				<field label="Domain">
					<text-input label="Domæne" key="domain"/>
				</field>
				<buttons>
					<button title="Slet" name="deleteAccount"/>
					<button title="Annuller" name="cancelAccount"/>
					<button title="Gem" highlighted="true" name="saveAccount" submit="true"/>
				</buttons>
			</fields>
		</formula>
	</window>
	
</gui>