<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:hui" title="Scheduler" padding="10">
	<dwr base="/dwr/">
		<interface name="AppSetup"/>
	</dwr>
	<controller source="applications.js"/>
	<source name="listSource" dwr="AppSetup.getApplicationList">
	</source>
	<structure>
		<top>
			<toolbar>
				<icon icon="common/folder" overlay="new" title="New application" name="newApplication"/>
			</toolbar>
		</top>
		<middle>
			<left>
			</left>
			<center>
				<overflow>
					<list name="list" source="listSource"/>
				</overflow>
			</center>
		</middle>
	</structure>
	
	<window name="applicationWindow" title="Application" width="300" padding="5">
		<formula name="applicationFormula">
			<group>
				<text key="name" label="Name"/>
				<text key="domain" label="Domain"/>
				<buttons>
					<button name="cancelApplication" text="Cancel"/>
					<button name="deleteApplication" text="Delete"/>
					<button text="Save" highlighted="true" submit="true"/>
				</buttons>
			</group>
		</formula>
	</window>
</gui>