<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:hui" title="Indstillinger" padding="10">	
	<controller source="indices.js"/>
	
	<source name="selectionSource" url="getIndexOptions"/>
	
	<source name="listSource" url="getIndexDocuments">
		<parameter key="page" value="@list.window.page"/>
		<parameter key="search" value="@search.value"/>
		<parameter key="name" value="@selection.value"/>
	</source>

	<structure>
		<top>
			<toolbar>
				<icon icon="common/new" text="Add address" name="newPublisher"/>
				<right>
					<field label="Search">
						<searchfield name="search" expanded-width="200"/>
					</field>
				</right>
			</toolbar>
		</top>
		<middle>
			<left>
				<overflow>
					<selection name="selection">
						<items source="selectionSource"/>
					</selection>
				</overflow>
			</left>
			<center>
				<split>
					<row>
						<overflow>
							<list name="list" source="listSource"/>
						</overflow>
					</row>
					<row>
						<bar variant="layout">
							<text name="contentHeader"/>
						</bar>
						<overflow>
							<fragment name="contentViewer"></fragment>
						</overflow>
					</row>
				</split>
			</center>
		</middle>
		<bottom/>
	</structure>
	
	<window name="publisherWindow" title="OnlinePublisher instance" padding="5" width="300">
		<formula name="publisherFormula">
			<fields>
				<field label="Name:">
					<text-input key="name"/>
				</field>
				<field label="Address:">
					<text-input key="address"/>
				</field>
			</fields>
			<buttons top="10">
				<button title="Cancel" name="cancelPublisher"/>
				<button title="Delete" name="deletePublisher">
					<confirm text="Are you sure?" ok="Yes, delete" cancel="No"/>
				</button>
				<button title="Save" name="savePublisher" highlighted="true" submit="true"/>
			</buttons>
		</formula>
	</window>
</gui>