<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:hui" title="Settings">

	<controller name="controller" source="settings.js"/>
	<space height="20"/>
	<box width="400" title="Settings" padding="10">
		<formula name="formula">
			<header>Change administrator password</header>
			<text><p>At least 8 characters with uppercase, lowercase, numbers and symbols - like pA$sw0rD.</p></text>
			<fields labels="above">
				<field label="Password">
					<text-input secret="true" name="password1"/>
				</field>
				<field label="Password - again">
					<text-input secret="true" label="Gentag adgangskode" name="password2"/>
				</field>
			</fields>
			<buttons>
				<button title="Change" name="changePassword" submit="true"/>
			</buttons>
		</formula>
	</box>
</gui>