<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
  	xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
        http://www.directwebremoting.org/schema/spring-dwr
    	http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd
    ">
    
    <dwr:configuration>
    	<dwr:convert type="bean" class="dk.in2isoft.onlineobjects.apps.videosharing.util.UserProfileInfo"/>
    </dwr:configuration>

	<bean id="videosharingController" class="dk.in2isoft.onlineobjects.apps.videosharing.VideosharingController" autowire="byType"/>

	<bean id="videosharingView" class="dk.in2isoft.onlineobjects.apps.videosharing.views.VideosharingView" autowire="byType" scope="request"/>
	
	<bean id="videosharingFrontView" class="dk.in2isoft.onlineobjects.apps.videosharing.views.FrontView" autowire="byType" scope="request"/>
	<bean id="videosharingVideoView" class="dk.in2isoft.onlineobjects.apps.videosharing.views.VideoView" autowire="byType" scope="request"/>
	<bean id="videosharingProfileView" class="dk.in2isoft.onlineobjects.apps.videosharing.views.ProfileView" autowire="byType" scope="request"/>
	<bean id="videosharingChartsView" class="dk.in2isoft.onlineobjects.apps.videosharing.views.ChartsView" autowire="byType" scope="request"/>

   	
   	<bean id="videosharingRemotingFacade" class="dk.in2isoft.onlineobjects.apps.videosharing.remoting.VideosharingRemotingFacade" autowire="byType">
    	 <dwr:remote javascript="AppVideosharing">
    	 	<dwr:include method="addComment"/>
    	 	<dwr:include method="addVideoFromUrl"/>
    	 	<dwr:include method="removeVideo"/>
    	 	<dwr:include method="rateVideo"/>
    	 	<dwr:include method="rateVideoAdditive"/>
    	 	<dwr:include method="getProfileInfo"/>
    	 	<dwr:include method="updateProfileInfo"/>
    	 	<dwr:include method="signUp"/>
    	 	<dwr:filter class="dk.in2isoft.onlineobjects.ui.DWRFilter"/>
    	 </dwr:remote>
   	</bean>
</beans>